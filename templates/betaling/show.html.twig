{% extends 'base.html.twig' %}

{% block title %}Betaling{% endblock %}

{% block body %}
    <h1>Betaling</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ betaling.id }}</td>
            </tr>
            <tr>
                <th>Referentie</th>
                <td>{{ betaling.referentie }}</td>
            </tr>
            <tr>
                <th>Datum</th>
                <td>{{ betaling.datum ? betaling.datum|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Bedrag</th>
                <td>{{ betaling.bedrag }}</td>
            </tr>
            <tr>
                <th>Rek_nr</th>
                <td>{{ betaling.rekNr }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_betaling_index') }}">Terug naar overzicht</a>

    <a href="{{ path('app_betaling_edit', {'id': betaling.id}) }}">edit</a>

    {{ include('betaling/_delete_form.html.twig') }}
{% endblock %}
